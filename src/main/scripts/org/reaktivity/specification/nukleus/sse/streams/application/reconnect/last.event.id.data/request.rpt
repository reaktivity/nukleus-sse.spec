connect "nukleus://streams/app#0"
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${sse:beginEx()
                             .typeId(nukleus:id("sse"))
                             .pathInfo("/events/a8b7c6d5")
                             .lastEventId(null)
                             .build()}

connected

write close

read nukleus:data.ext ${sse:dataEx()
                           .typeId(nukleus:id("sse"))
                           .timestamp(1519937168533)
                           .id("105")
                           .type(null)
                           .build()}
read "Hello, world"

read notify RECONNECT_EVENT_STREAM
read closed

connect await RECONNECT_EVENT_STREAM
        "nukleus://streams/app#0"
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${sse:beginEx()
                             .typeId(nukleus:id("sse"))
                             .pathInfo("/events/a8b7c6d5")
                             .lastEventId("105")
                             .build()}

connected

write close
